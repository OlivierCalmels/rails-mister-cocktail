<div class="container">
  <h1>The cocktails :</h1>
  <ul>
    <% @cocktails.each do |cocktail| %>
      <li><%= link_to cocktail.name, cocktail_path(cocktail) %>
      <%= link_to cocktail_path(cocktail), method: :delete, data: { confirm: 'Are you sure?' } do %>
          <i class="fas fa-trash"></i>
        <% end %>
        </li>
    <% end %>
  </ul>
  <%= link_to "Create a new cocktail", new_cocktail_path, class: 'btn btn-primary' %>
</div>
